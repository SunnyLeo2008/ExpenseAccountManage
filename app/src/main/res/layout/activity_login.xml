<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.leosoft.eam.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <com.leosoft.eam.utils.ShapedImageView
            android:id="@+id/imageLogin"
            android:layout_width="@dimen/photo_height"
            android:layout_height="@dimen/photo_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/comm_margin"
            app:shape_mode="circle"
            app:stroke_color="@color/colorIcons"
            app:stroke_width="@dimen/stroke_width">
        </com.leosoft.eam.utils.ShapedImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginTop="@dimen/comm_half_margin"
            android:layout_gravity="center"
            android:textSize="@dimen/password_textSize"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorBackground">
        <FrameLayout
            android:id="@+id/container_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>
