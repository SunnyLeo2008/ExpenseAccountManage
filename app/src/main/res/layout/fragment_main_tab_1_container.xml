<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/fragment_container_1"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:wave="http://schemas.android.com/apk/res-auto"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_title_height"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/comm_half_margin"
                android:textSize="@dimen/comm_textSize_large"
                android:textColor="@color/colorIcons"
                android:layout_weight="1"
                android:text="@string/app_name" />

            <ImageButton
                android:id="@+id/imageButtonAddBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/comm_half_margin"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_content_add"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <com.john.waveview.WaveView
                android:id="@+id/wave_background_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                wave:above_wave_color="@android:color/white"
                wave:blow_wave_color="@android:color/white"
                wave:wave_height="large"
                wave:wave_hz="normal"
                wave:wave_length="middle" />

            <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
                android:id="@+id/wave_fillable_loaders_1"
                android:layout_width="@dimen/photo_height"
                android:layout_height="@dimen/photo_height"
                android:src="@drawable/ic_wave_fillable_loaders_bg"
                android:layout_gravity="center"
                app:cfl_wave_color="@color/colorPrimaryLight"
                app:cfl_border_width="3dp"
                />

            <TextView
                android:id="@+id/total_bill_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comm_min_margin"
                android:textSize="@dimen/comm_textSize_little"
                android:textColor="@color/colorIcons"
                android:layout_gravity="bottom|center_horizontal"
                />

            <TextView
                android:id="@+id/handle_bill_percent_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/comm_textSize_huge"
                android:textColor="@color/colorIcons"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_main_recycler_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
    </LinearLayout>

</FrameLayout>